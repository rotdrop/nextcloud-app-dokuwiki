<?xml version="1.0"?>
<ruleset name="CJH PHPMD Rule-Set"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                             http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd"
>
  <description>
    CJH Custom Rule Set
  </description>

  <rule ref="rulesets/cleancode.xml">
    <exclude name="ElseExpression"/>
    <exclude name="StaticAccess"/>
    <!-- What is this shit? I mean ... -->
    <exclude name="BooleanArgumentFlag" />
    <exclude name="StaticAcces" />
  </rule>

  <rule ref="rulesets/controversial.xml">
    <!-- already checked by phpcs -->
    <exclude name="CamelCaseMethodName"/>
  </rule>

  <rule ref="rulesets/design.xml/CouplingBetweenObjects">
    <properties>
      <property name="maximum" value="40"/>
    </properties>
  </rule>
  <rule ref="rulesets/design.xml">
    <exclude name="CouplingBetweenObjects"/>
  </rule>

  <rule ref="rulesets/naming.xml">
    <exclude name="ShortVariable"/>
    <exclude name="LongVariable"/>
    <exclude name="LongClassName"/>
    <exclude name="BooleanGetMethodName"/>
  </rule>
  <rule ref="rulesets/naming.xml/ShortVariable">
    <properties>
      <property name="exceptions" value="a,b,c,cc,d,db,e,f,fp,g,kd,km,i,id,j,k,l,n,op,qb,r,s,tz,x"/>
    </properties>
  </rule>
  <rule ref="rulesets/naming.xml/ShortMethodName">
    <properties>
      <property name="exceptions" value="di"/>
    </properties>
  </rule>
  <rule ref="rulesets/naming.xml/LongVariable">
    <properties>
      <property name="subtract-suffixes" value="Disabled,Enabled"/>
      <property name="maximum" value="32"/>
    </properties>
  </rule>
  <rule ref="rulesets/naming.xml/LongClassName">
    <properties>
      <property name="subtract-suffixes" value="Disabled,Enabled"/>
      <property name="maximum" value="64"/>
    </properties>
  </rule>

  <rule ref="rulesets/unusedcode.xml">
    <exclude name="UnusedFormalParameter"/>
  </rule>
</ruleset>
